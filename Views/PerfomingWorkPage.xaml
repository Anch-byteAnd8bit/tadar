<Page x:Class="Tadar.Views.PerfomingWorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
      xmlns:viewmodels="clr-namespace:Tadar.ViewModels" xmlns:rules="clr-namespace:Tadar.Views"
      d:DataContext="{d:DesignInstance Type=viewmodels:PerfomingWorkViewModel}"
      
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Perfoming work">

    <Grid Background="#FFA25DED" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="18*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    materialDesign:ButtonAssist.CornerRadius="25" x:Name="_class"
                    Height="45"
                    Command="{Binding LoadClick}"
                    Grid.Column="1"
                    Grid.Row="3"
                    Content="Отправить"
                    HorizontalAlignment="Center" 
                    Width="255" FontSize="25" Cursor="Hand"  
                />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="White"
            Style="{StaticResource MaterialDesignHeadline4TextBlock}"
            Text="{Binding NameTest}"/>


        
             <StackPanel 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
              Grid.Row="1"
              Grid.Column="1"
              Width="660"
              Height="550"
                 >

            <StackPanel
                    VerticalAlignment="Top"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="650"
                    Background="White">

                <TextBlock TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.CanContentScroll="True" FontSize="18"
                    Foreground="Black" 
                    Height="10"
                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                    Text=""
                   />

                <!--Text="{Binding Title}">-->
                
                <TextBlock TextWrapping="Wrap"
                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                           Height="40"
                           ScrollViewer.CanContentScroll="True" FontSize="18"
                           Foreground="Black" 
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Text="{Binding Body}">
                            </TextBlock>
                        </StackPanel>   

                 <TextBox Name="work" 
                     Margin="0 90 0 0"
                 TextWrapping="Wrap" GotFocus="SomeTextBox_GotFocus"
                 LostFocus="SomeTextBox_LostFocus"
                 VerticalScrollBarVisibility="Visible"
                 AcceptsReturn="True"
                 Grid.Row="1" 
                 Grid.Column="1"
                 materialDesign:HintAssist.Hint="Введите ответ"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                 FontSize="18"
                 Width="650" Height="400" 
                 Background="White"
                 TextAlignment="Center"
                 AutoWordSelection="True"
                 Foreground="Black" Cursor="Arrow">
                <TextBox.Text>
                                <Binding Path="Answer" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <rules:NotEmptyValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>



        </StackPanel>
       



        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Grid.Row="1"
            Grid.Column="2" Margin="10,0,0,0">
            <Button x:Name="btnO"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                Ӧ
            </Button>

            <Button x:Name="btnI"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                І
            </Button>

            <Button x:Name="btnY"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                Ӱ
            </Button>
            <Button x:Name="btnF"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                Ғ
            </Button>
            <Button x:Name="btnN"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                Ң
            </Button>
            <Button x:Name="btnJ"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                Ҷ
            </Button>
        </StackPanel>


        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Left" Grid.Row="1"
            Grid.Column="2" Margin="62,0,0,0">
            <Button x:Name="btno"
                    Width="40"
                    Height="40"
                    Margin="3"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                ӧ
            </Button>

            <Button x:Name="btni"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                і
            </Button>
            <Button x:Name="btny"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                ӱ
            </Button>
            <Button x:Name="btnf"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                ғ
            </Button>
            <Button x:Name="btnn"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                ң
            </Button>
            <Button x:Name="btnj"
                    Margin="3"
                    Width="40"
                    Height="40"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionLightButton">
                ҷ
            </Button>
        </StackPanel>
    </Grid>
</Page>
